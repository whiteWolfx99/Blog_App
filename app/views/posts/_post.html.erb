<div class="post_col", id="<%= dom_id post %>">
  <p>
    <%= post.text %>
  </p>

<div class="post_info">
  <p>
    <strong>Comments:</strong>
    <%= post.commentsCounter %>
  </p>

  <p>
    <strong>Likes:</strong>
    <%= post.likesCounter %>
  </p>

       <% if can? :destroy, post %>
        <%=button_to "Delete Post", user_post_path(@user, post), method: :delete %>
       <% end %>
</div>
</div>
