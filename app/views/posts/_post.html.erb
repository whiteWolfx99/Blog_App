<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.text %>
  </p>

  <p>
    <strong>Commentcounter:</strong>
    <%= post.commentsCounter %>
  </p>

  <p>
    <strong>Likescounter:</strong>
    <%= post.likesCounter %>
  </p>

  <p>
    <strong>Users:</strong>
    <%= post.author_id %>
  </p>

</div>
