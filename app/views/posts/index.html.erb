<div id="users" class="container">
  <%= render @user %>
  <div class="post_container">
    <% @posts.each_with_index do |post, index| %>
    <%= link_to user_post_path(@user, post), class: "post_row" do %>
      <p> <%= post.title %> </p>
      <%= render post %>
    <% end %>
      <div class="comment_container">
        <% post.recentcomments.each do |comment| %>
          <div class="comment_row">
            <%= render comment %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
